@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- App favicon -->
    <link rel="shortcut icon" href="/dashboard/authenticate/assets/images/logo-sm_1.png">
    <!-- App css -->
    <link href="~/dashboard/authenticate/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/dashboard/authenticate/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/dashboard/authenticate/assets/css/metisMenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/dashboard/authenticate/assets/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body class="account-body accountbg">

    <!-- Log In page -->
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="auth-logo-box">
                                <a href="#" class="logo logo-admin">
                                    <img src="~/dashboard/authenticate/assets/images/logo-sm.png" height="55" alt="logo" class="auth-logo">
                                </a>
                            </div><!--end auth-logo-box-->

                            <div class="text-center auth-logo-text">
                                <h4 class="mt-0 mb-3 mt-5">Let's Get Started elPrize</h4>
                                <p class="text-muted mb-0">Sign in to continue to elPrize.</p>
                            </div> <!--end auth-logo-text-->
                            <!--#region form-->
                            <form class="form-horizontal auth-form my-4" method="post" action="Account/Login" >
                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <div class="input-group mb-3">
                                        <span class="auth-form-icon">
                                            <i class="dripicons-user"></i>
                                        </span>
                                        <input type="text" class="form-control" asp-for="Username" placeholder="Enter username">
                                        <span asp-validation-for="Username" class="text-danger pl-3  aspValidationFor"></span>
                                    </div>
                                </div><!--end form-group-->
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <div class="input-group mb-3">
                                        <span class="auth-form-icon">
                                            <i class="dripicons-lock"></i>
                                        </span>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
                                        <span asp-validation-for="Password" class="text-danger pl-3  aspValidationFor"></span>
                                    </div>
                                </div><!--end form-group-->

                                <div class="form-group row mt-4">
                                     
                                    <div class="col-sm-6 text-right">
                                        <a href="@Url.Action("AuthRecover", "Account")" class="text-muted font-13">
                                            <i class="dripicons-lock"></i> Forgot password?
                                        </a>
                                    </div><!--end col-->
                                </div><!--end form-group-->
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 mt-2 aspValidationFor"></div>
                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        <button class="btn btn-elPrize btn-round btn-block waves-effect waves-light" type="submit">
                                            Log In <i class="fas fa-sign-in-alt ml-1"></i>
                                        </button>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                            </form><!--end form-->
                            <!--#region-->
                        </div><!--end /div-->

                        <div class="m-3 text-center text-muted">
                            <p class="">
                                Don't have an account ?
                                <a href="@Url.Action("Register","Account")" class="text-primary ml-2">Free Resister</a>
                            </p>
                        </div>
                    </div><!--end card-body-->
                </div><!--end card-->
                <div class="account-social text-center mt-4">
                    <h6 class="my-4">Or Login With</h6>
                    <ul class="list-inline mb-4">
                        <li class="list-inline-item">
                            <a href="" class="">
                                <i class="fab fa-facebook-f facebook"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="" class="">
                                <i class="fab fa-twitter twitter"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="" class="">
                                <i class="fab fa-google google"></i>
                            </a>
                        </li>
                    </ul>
                </div><!--end account-social-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/dashboard/authenticate/assets/js/jquery.min.js"></script>
    <script src="~/dashboard/authenticate/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/dashboard/authenticate/assets/js/metisMenu.min.js"></script>
    <script src="~/dashboard/authenticate/assets/js/waves.min.js"></script>
    <script src="~/dashboard/authenticate/assets/js/jquery.slimscroll.min.js"></script>
    <!-- App js -->
    <script src="~/dashboard/authenticate/assets/js/app.js"></script>

</body>
</html>
